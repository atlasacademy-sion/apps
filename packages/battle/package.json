{
    "name": "@atlasacademy/battle",
    "type": "commonjs",
    "version": "0.5.3",
    "description": "Library to run fgo battle simulations",
    "homepage": "https://github.com/atlasacademy/apps/tree/master/packages/battle",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "module": "dist/index.mjs",
    "files": [
        "dist"
    ],
    "scripts": {
        "fetch-test-data": "ts-node test-data/fetchTestData.ts",
        "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' pnpm run fetch-test-data && mocha -r ts-node/register 'tests/**/*.ts'",
        "test-win": "set TS_NODE_COMPILER_OPTIONS={\"module\": \"commonjs\" } && pnpm run fetch-test-data && mocha -r ts-node/register 'tests/**/*.ts'",
        "build": "tsup",
        "prepare": "tsup",
        "link": "npm run build && cd dist && npm link",
        "watch": "tsup --watch"
    },
    "license": "ISC",
    "devDependencies": {
        "@atlasacademy/prettier-config": "workspace:^1.0.0",
        "@types/chai": "^4.2.18",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.2.2",
        "@types/node": "^15.6.1",
        "@types/tar": "^4.0.4",
        "@types/uuid": "^8.3.0",
        "axios": "^0.21.1",
        "chai": "^4.3.4",
        "glob": "^7.1.6",
        "mocha": "^8.4.0",
        "tar": "^6.1.0",
        "ts-node": "^9.1.1",
        "tsup": "^6.5.0",
        "typescript": "^4.1.3"
    },
    "dependencies": {
        "@atlasacademy/api-connector": "^4.0.3"
    },
    "publishConfig": {
        "access": "public"
    }
}
